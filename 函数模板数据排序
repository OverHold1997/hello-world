#include <iostream>
using namespace std;
template<typename T>
T paixu(T *p,int n)
{
    for(int i=0;i<n-1;i++)
    {
         for(int j=i+1;j<n;j++)
        {
            if(p[i]>p[j])
            {
                T temp;
				temp = p[i];
                p[i] = p[j];
                p[j] = temp;
            }
        }
    } 
} 
 int main()
{
	int i,n,q;
	cout<<"请输入你想比较几个数据："<<endl;
	cin>>n;
	cout<<"你想比较那种数据类型："<<endl<<"(1)整形\n(2)单精度\n(3)双精度"<<endl<<"输入类型前的编号"<<endl;
	cin>>q;
	if(q==1)
	{
	   int *p=new int [n];
	   for(i=0;i<n;i++)
	   {
		   cin>>p[i];
	   }
	   paixu(p,n);
	   for(i=0;i<n;i++)
	   {
		cout<<p[i]<<" ";
	   }
	}
	if(q==2)
	{
		float *p=new float [n];
	    for(i=0;i<n;i++)
	    {
		   cin>>p[i];
	    }
	    paixu(p,n);
	    for(i=0;i<n;i++)
	    {
		cout<<p[i]<<" ";
	    }
	}
    if(q==3)
    {
    	double *p=new double [n];
	    for(i=0;i<n;i++)
	    {
		    cin>>p[i];
	    }
	    paixu(p,n);
	    for(i=0;i<n;i++)
	    {
		cout<<p[i]<<" ";
	    }
	}	
	return 0;
}
